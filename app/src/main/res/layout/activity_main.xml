<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/fristFragCallBotton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1dp"
                android:text="첫 프래그먼트" />

            <Button
                android:id="@+id/secondFragCallBotton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1dp"
                android:text="두번째  프래그먼트" />

        </LinearLayout>

        <fragment
            android:id="@+id/firstFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="kr.uk.dh.a20200319_02_fragment02.fragments.FirstFragment"/>


    </LinearLayout>
</layout>